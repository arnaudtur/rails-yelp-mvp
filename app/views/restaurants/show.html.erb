<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.category %></h6>
    <p class="card-text">Address: <%= @restaurant.address %></p>
    <p class="card-text">Phone Number: <%= @restaurant.phone_number %></p>

  </div>
</div>


<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> Rating: <%= review.rating %></li>
  <% end %>
</ul>


<%= link_to "Edit", edit_restaurant_path %>
</br>

<%= link_to "Delete #{@restaurant.name}",
            restaurant_path(@restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

</br>

<%= link_to "Go back to index", restaurants_path %>
</br>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>


